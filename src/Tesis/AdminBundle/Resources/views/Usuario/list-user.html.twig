{% extends '::admin_base.html.twig' %}

{% block body %}


    <!-- Site wrapper -->
    <div class="wrapper">
      
      {{ include('TesisAdminBundle:Main:header.html.twig') }}

      {{ include('TesisAdminBundle:Main:sidebar.html.twig') }}

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
          <!-- Content Header (Page header) -->
          <section class="content-header">
            <h1>
              Gestión de Usuarios
              <small></small>
            </h1>
            <ol class="breadcrumb">
              <li><a href="{{ path('tesis_admin_homepage') }}"><i class="fa fa-dashboard"></i>Inicio</a></li>
              <li class="active">Gestión de Usuarios</li>
              <li class="active">Listar</li>
            </ol>
          </section>

          <!-- Main content -->
          <section class="content">

            <!-- Default box -->
            <div class="box box-primary">
              <div class="box-header with-border">
                <h3 class="box-title">Consultar usuarios y estudiantes</h3>
                <div class="box-tools pull-right">
                  <button class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
                </div>
              </div>
              

              <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>Nombre</th>
                      <th>Apellido</th>
                      <th>Rol</th>
                      <th>Cedula</th>
                      <th></th>
                      <th></th>
                      {% if (user.rol == 'coordinador de servicio comunitario') %}
                      <th></th> 
                      {% endif %}                      
                    </tr>
                  </thead>
                  <tbody>
                  {% for usuario in usuarios %}
                    <tr>
                    <td>{{ usuario.nombre }}</td>
                    <td>{{ usuario.apellido }}</td>                    
                    <td>{{ usuario.rol }}</td>
                    <td>{{ usuario.cedula }}</td>
                    <td align="center">
                      <a href="{{ path('user_check', {'cedula': usuario.cedula}) }}">
                          <button class="btn  btn-success">Consultar</button>
                      </a>
                    </td>
                    <td align="center">
                      <a href="{{ path('user_edit', {'cedula': usuario.cedula}) }}">
                          <button class="btn btn-success">Editar</button>
                      </a>
                    </td> 
                    {% if (user.rol == 'coordinador de servicio comunitario') %}
                    <td align="center">
                      <a href="{{ path('user_edit', {'cedula': usuario.cedula}) }}">
                          <button class="btn btn-danger">Eliminar</button>
                      </a>
                    </td>
                    {% endif %} 
                    </tr> 
                  {% endfor %}     

                  {% for estudiante in estudiantes %}
                    <tr>
                    <td>{{ estudiante.nombre }}</td>
                    <td>{{ estudiante.apellido }}</td>                    
                    <td>{{ estudiante.rol }}</td>
                    <td>{{ estudiante.cedula }}</td>
                    <td align="center">
                      <a href="{{ path('user_check', {'cedula': estudiante.cedula}) }}">
                          <button class="btn btn-success">Consultar</button>
                      </a>
                    </td>
                    <td align="center">
                      <a href="{{ path('user_edit', {'cedula': estudiante.cedula}) }}">
                          <button class="btn btn-success">Editar</button>
                      </a>
                    </td>
                    {% if (user.rol == 'coordinador de servicio comunitario') %}
                    <td align="center">
                      <a href="{{ path('user_edit', {'cedula': estudiante.cedula}) }}">
                          <button class="btn btn-danger">Eliminar</button>
                      </a>
                    </td> 
                    {% endif %}                   
                    </tr> 
                  {% endfor %} 
                  </tbody>
                  <tfoot>
                    <tr>
                      <th>Nombre</th>
                      <th>Apellido</th>
                      <th>Rol</th>
                      <th>Cedula</th>
                      <th></th>
                      <th></th>
                      {% if (user.rol == 'coordinador de servicio comunitario') %}
                      <th></th>
                      {% endif %}                       
                    </tr>
                  </tfoot>
                </table> 
              </div><!-- /.box-body -->                               
            </div><!-- /.box -->
          </section><!-- /.content -->
        </div><!-- /.content-wrapper -->

      {{ include('TesisAdminBundle:Main:footer.html.twig') }}
     
    </div><!-- ./wrapper -->


{% endblock %}


 {% block js %}
        <!-- page script -->
    <script type="text/javascript">
      $(function () {
        $("#example1").dataTable();
      });

        $('#example2').dataTable({
          "bPaginate": true,
          "bLengthChange": false,
          "bFilter": false,
          "bSort": true,
          "bInfo": true,
          "bAutoWidth": false
        });


    </script> 

 {% endblock %}   